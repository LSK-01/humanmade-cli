{
  "compilerOptions": {
    "target": "ESNext", // Compile to a modern ECMAScript version that supports ES Modules
    "module": "ESNext", // Use ES Module syntax
    "moduleResolution": "node", // Use Node's module resolution strategy
    "esModuleInterop": true, // Enables compatibility with CommonJS modules for default imports
    "strict": true, // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Ensure case consistency in imports
    "skipLibCheck": true, // Skip type checking of declaration files
    "outDir": "./dist" // Output directory for compiled files
  },
  "include": ["index.ts"], // Adjust this to where your source files are located
  "exclude": ["node_modules", "**/*.spec.ts"]
}
